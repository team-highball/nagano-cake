<%= form_with model: @client, url: admin_client_path(@client.id), local: true do |f| %>

<table>
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>会員ID</td>
            <td><%= @client.id %>
            </td>
        </tr>

        <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "first_name" %> <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name" %></td>
        </tr>

        <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_first_name" %> <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_last_name" %></td>
        </tr>

        <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        </tr>

        <tr>
            <td>住所</td>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>

        <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
        </tr>

        <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
            <td>会員ステータス</td>
            <td>
            <label ><%= f.radio_button :deleted_user, 1 %>有効</label>
            <label ><%= f.radio_button :deleted_user, 0 %>退会済み</label>
            </td>
        </tr>

    </tbody>
</table>

    <%= f.submit "変更を保存する" %>

<% end %>
