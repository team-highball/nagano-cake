<h3>注文履歴一覧</h3>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <td></td>
            <td>
                <% if order.status == 1%>
                    入金待ち
                <% elsif order.status == 2 %>
                    入金確認
                <% elsif order.status == 3 %>
                    制作中
                <% elsif order.status == 4 %>
                    発送準備中
                <% else %>
                    発送済
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>