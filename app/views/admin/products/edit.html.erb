<div id="admin_product_edit" class="container">

	<div class="row">
		<h3>商品編集</h3>
	</div>

	<%= form_for(@product, url: admin_product_path(@product.id)) do |f| %>

	<%= render 'layouts/error_messages', model: f.object %>

	<div class="row">

		<div class="col-lg-6 col-md-6 co-xs-6">
			<div class="field product-image">
				<%= f.label :"商品画像" %>
				<%= f.attachment_field :product_image , onchange: 'previewImage(preview)' %>
				<%= attachment_image_tag(@product, :product_image,  size: "300x220", format: 'jpeg', fallback: "no-image-mini.jpg", id: 'preview') %>
			</div>
		</div>

		<div class="col-lg-6 col-md-6 colxs-6">

			<table class="table">
				<tbody>
					<tr>
						<td><%= f.label :"商品名" %></td>
						<td><%= f.text_field :name %></td>
					</tr>
					<tr>
						<td><%= f.label :"商品説明" %></td>
						<td><%= f.text_area :introduction %></td>
					</tr>
					<tr>
						<td><%= f.label :"ジャンル" %></td>
						<td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
					</tr>
					<tr>
						<td><%= f.label :price %></td>
						<td><%= f.text_field :price %> 円</td>
					</tr>
					<tr>
						<td><%= f.label :"販売ステータス" %></td>
						<td><%= f.select :is_active, [["販売中", "1"], ["販売中止", "2"]] %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row d-flex justify-content-end">
		<%= f.submit "変更を保存" ,class: "btn btn-primary" %>
	</div>

	<% end %>
</div>
