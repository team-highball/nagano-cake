<div id="admin_product_edit" class="container">

	<div class="error">
		<% if @product.errors.any? %>
		<h2><%= @product.errors.count %>件のエラーが発生しました。</h2>
		<ul>
			<%= @product.errors.full_messages.each do |message| %>
			<li><p>error</p><%= message %></li>
			<% end %>
		</ul>
		<% end %>
	</div>

	<div class="row">
		<h3>商品編集</h3>
	</div>

	<%= form_for(@product, url: admin_product_path(@product.id)) do |f| %>
	<div class="row">

		<div class="col-lg-6 col-md-6 co-xs-6">
			<!-- 画像のプレビュー機能を作る -->
			<div class="field product-image">
				<%= f.label :"商品画像" %> <br>
				<%= f.attachment_field :product_image %>
			</div>
		</div>

		<div class="col-lg-6 col-md-6 colxs-6">

			<table class="table">
				<tbody>
					<tr>
						<td><%= f.label :"商品名" %></td>
						<td><%= f.text_field :name %></td>
					</tr>
					<tr>
						<td><%= f.label :"商品説明" %></td>
						<td><%= f.text_area :introduction %></td>
					</tr>
					<tr>
						<td><%= f.label :"ジャンル" %></td>
						<td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
					</tr>
					<tr>
						<td><%= f.label :price %></td>
						<td><%= f.text_field :price %> 円</td>
					</tr>
					<tr>
						<td><%= f.label :"販売ステータス" %></td>
						<td><%= f.select :is_active, [["販売中", "1"], ["販売中止", "2"]] %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row d-flex justify-content-end">
		<%= f.submit "変更を保存" ,class: "btn btn-primary" %>
	</div>

	<% end %>
</div>
