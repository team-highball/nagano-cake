<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @products.each do |product| %>
				<tr>
                    <td><%= product.id %></td>
					<td>
						<%= link_to product.name admin_product_path(product.is)%>
					</td>
					<td><%= product.price %></td>
					<td><%= product %></td>
					<td><%= book.book_comments.count %></td>
					<td class="book_<%= book.id %>"><%= render "favorites/favorite", book: book %></td>
				</tr>
				<% end %>
			</tbody>
		</table>