<h3>商品新規登録</h3>
<%= form_for(@product, url: admin_products_path) do |f| %>

	<div class="error">
	<% if @product.errors.any? %>
		<h2><%= @product.errors.count %>件のエラーが発生しました。</h2>
		<ul>
			<%= @product.errors.full_messages.each do |message| %>
				<li><p>error</p><%= message %></li>
			<% end %>
		</ul>
	<% end %>
	</div>
	
	<div class="field ">
		<%= f.label :"商品名" %><br>
		<%= f.text_field :name %>
	</div>

    <div class="field ">
		<%= f.label :"商品説明" %><br>
		<%= f.text_area :introduction %>
	</div>

	<%= f.collection_select :genre_id, Genre.where(is_active: 1), :id, :name, include_blank: "選択して下さい" %>

    <div class="field ">
		<%= f.label :price %><br>
		<p><%= f.text_field :price %>円</p>
	</div>

    <div class="field">
		<%= f.label :image %>
		<%= f.attachment_field :product_image %>
	</div>

	<div class="actions">
		<%= f.submit "新規登録" ,class: "btn btn-primary" %>
	</div>
<% end %>