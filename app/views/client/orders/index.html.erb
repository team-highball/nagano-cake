<div class="container index">

  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class="row">
    <div class="col-lg-2">注文日</div>
    <div class="col-lg-3">配送先</div>
    <div class="col-lg-2">注文商品</div>
    <div class="col-lg-2">支払金額</div>
    <div class="col-lg-1">ステータス</div>
    <div class="col-lg-2">注文詳細</div>
  </div>

  <% @orders.each do |order| %>
    <div class="row">
      <div class="col-lg-2">
        <!-- ApplicationControllerでsimple_imeというメソッドを作ることとする -->
        <!-- /app/helpers/application_helper.rb
              def simple_time(time)
              time.strftime("%Y-%m-%d　%H:%M　")
              end  -->
        <!-- = simple_time(order.created_at) -->
      </div>
      <div class="col-lg-3">
        <div class="row">
          <%= order.post_code + " " + order.address %>
        </div>
        <div class="row">
          <%= order.name %>
        </div>
      </div>
      <div class="col-lg-2">
        <% sum_all = 0 %>
          <% order.order_products.each do |op| %>
            <%= op.product.name %> <br>
            <% sum_all += sub_total.to_i %>
          <% end %>
      </div>
      <div class="col-lg-2">
        <%= sum_all += order.postage.to_i %>円
      </div>
      <div class="col-lg-1">
        <%= status(order) %>
      </div>
      <div class="col-lg-2">
        <%= link_to "表示する", order_path(order), class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>

</div>
