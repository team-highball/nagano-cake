<div class="container index">

  <div class="row">
    <h2>注文履歴一覧</h2>
  </div>

  <div class="row">
    <div class="col-lg-2">注文日</div>
    <div class="col-lg-3">配送先</div>
    <div class="col-lg-2">注文商品</div>
    <div class="col-lg-2">支払金額</div>
    <div class="col-lg-1">ステータス</div>
    <div class="col-lg-2">注文詳細</div>
  </div>

  <% @orders.each do |order| %>
    <div class="row">
      <div class="col-lg-2">
        <!-- ApplicationControllerでsimple_imeというメソッドを作ることとする -->
        <!-- /app/helpers/application_helper.rb
              def simple_time(time)
              time.strftime("%Y-%m-%d　%H:%M　")
              end  -->
        <%= simple_time(order.created_at) %>
      </div>
      <div class="col-lg-3">
        <%= order.postal_code + " " + order.address %>　<br>
        <%= order.name %>
      </div>
      <div class="col-lg-2">
        <% order.order_products.each do |op| %>
          <%= op.product.name %> <br>
        <% end %>
      </div>
      <div class="col-lg-2">
        <%= order.total_bill %>円
      </div>
      <div class="col-lg-1">
        <% if order.status == 1 %>
          <p>入金待ち</p>
        <% elsif order.status == 2 %>
          <p>入金確認</p>
        <% elsif order.status == 3 %>
          <p>制作中</p>
        <% elsif order.status == 4 %>
          <p>発送準備中</p>
        <% else %>
          <p>発送済</p>
        <% end %>
      </div>
      <div class="col-lg-2">
        <%= link_to "表示する", client_order_path(order), class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>

</div>
