
<table class="table table-hover">
  <thead class="table-primary">
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody class="overflow-auto">
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= link_to client_products_path(genre_sort: genre.id) do %>
        <div class="genre_color">
        <%= genre.name %>
        </div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
