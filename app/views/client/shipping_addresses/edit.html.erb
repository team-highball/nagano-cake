<div id="client_sa_edit" class="container">
  <div class="row">
    <h3>配送先編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @shipping_address, url: client_shipping_address_path(@shipping_address.id),  local: true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td><%= f.label :postal_code, "郵便番号" %>
          <td><%= f.text_field :postal_code %>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %>
          <td><%= f.text_area :address %></td>
        </tr>
        <tr>
          <td><%= f.label :destination, "宛名" %></td>
          <td><%= f.text_field :destination %></td>
        </tr>
        <tr>
          <td><%= f.submit "編集する", disable_with: 'Submiting...', class: "btn btn-success" %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

</div>
