<h3>配送先編集</h3>
<%= form_with model: @shipping_address, url: client_shipping_address_path(@shipping_address.id),  local: true do |f| %>

<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code %><br>

<%= f.label :address, "住所" %>
<%= f.text_area :address %><br>

<%= f.label :destination, "宛名" %>
<%= f.text_area :destination %><br>

<%= f.submit "編集する", disable_with: 'Submiting...' %>
<% end %>