<h3>配送先登録/一覧</h3>
<%= form_with model: @shipping_address, url: client_shipping_addresses_path,  local: true do |f| %>

<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code %><br>

<%= f.label :address, "住所" %>
<%= f.text_area :address %><br>

<%= f.label :destination, "宛名" %>
<%= f.text_area :destination %><br>

<%= f.submit "追加", disable_with: 'Submiting...' %>
<% end %>
<br>

<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
        <tr>
            <td><%= shipping_address.postal_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.destination %></td>
            <td><%= link_to "編集する", edit_client_shipping_address_path(shipping_address.id) %></td>
            <td><%= link_to "削除する", client_shipping_address_path(shipping_address.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>
        </tr>
        <% end %>
    </tbody>
</table>