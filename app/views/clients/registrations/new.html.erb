<div class="container">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "clients/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <p>(姓)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    (名)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></p>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <p>(セイ)<%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
    (メイ)<%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %></p>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %> <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><p>(ハイフンなし)</p> <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %> <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %> <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<p>既に登録済みの方</p>
<%= link_to "こちら", new_client_session_path %>からログインしてください。
</div>

